{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "baseUrl": ".",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "pro-el-components": [
        "./src/index.ts"
      ],
      "pro-el-components/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest",
      "vite/client"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/es",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/components",
    "packages",
    "../../docs/components.d.ts",
    "../../docs/auto-imports.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "cypress",
    "eslint.config.mjs"
  ]
}